<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFF"
    tools:context=".ui.categorystore.Fruits">

    <include
        android:id="@+id/incfru"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintBottom_toTopOf="@id/flipperfru"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <technolifestyle.com.imageslider.FlipperLayout
        android:id="@+id/flipperfru"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@id/frucons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/incfru"></technolifestyle.com.imageslider.FlipperLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frucons"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintBottom_toTopOf="@id/mRecyclerViewfru"
        android:layout_marginTop="5dp"
        android:background="@drawable/vegeconst"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flipperfru">

        <TextView
            android:id="@+id/fruit_itemcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="0 Items"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
           android:id="@+id/btnFilterFruits"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="@drawable/backfilter"
            android:drawableStart="@drawable/ic_levels"
            android:padding="5dp"
            android:shadowColor="#000"
            android:text="Filter"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="15sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerViewfru"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frucons"
        tools:listitem="@layout/data_content" />

</androidx.constraintlayout.widget.ConstraintLayout>



