<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".ui.allfragments.PaymentOption">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:padding="5dp"
        android:background="@drawable/cartcategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<TextView
    android:id="@+id/texttotalamount"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="wrap_content"
    android:text="Total Amount"/>
        <TextView
            android:id="@+id/totalamountprice"
            android:text="10"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"/>

<TextView
    android:layout_width="wrap_content"
    android:id="@+id/texttotalsaving"
    app:layout_constraintTop_toBottomOf="@id/texttotalamount"
    app:layout_constraintStart_toStartOf="parent"
    android:text="Total Saving"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginEnd="40dp"
            android:id="@+id/savingamountprice"
            android:layout_width="wrap_content"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/totalamountprice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>